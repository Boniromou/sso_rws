<% content_for :header do %>
  <%= link_to(t("general.login"), @nav_app_link || login_path, :class => "btn btn-danger") %>
<% end %>

<!-- ap_register_panel -->
<%= form_for(resource, as: resource_name, url: new_system_user_registration_path, html: {:class => "smart-form client-form"}) do |f| %>
  <header><%= t("title.signup_title") %></header>
  <fieldset>
    <section>
      <%= f.label(t("user.user_name"), :class => "label") %>
      <label class="input"> <i class="icon-append fa fa-user"></i>
        <%= f.text_field(:username) %>
        <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> <%=t("login_page.username_tooltip") %></b></label>
      
    </section>
    <section>
      <%= f.label(t("user.password"), :class => "label") %>
      <label class="input"> <i class="icon-append fa fa-lock"></i>
        <%= f.password_field :password %>
        <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> <%=t("login_page.password_tooltip") %></b> </label>
    </section>
    <% if @nav_app_link.present? %>
      <%= hidden_field_tag "app", @nav_app_link %>
    <% end %>
  </fieldset>
  <footer>
     <%= f.submit(t("general.sign_up"), :class => "btn btn-primary") %>
  </footer>
<% end %>
