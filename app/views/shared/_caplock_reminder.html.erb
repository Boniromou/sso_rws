<div id="capsLockWarning" class="warning note note-error" style="display: none; color: #C7254E;"><i class="fa fa-warning"></i>The Caps Lock is turn ON</div>

<script type="text/javascript">
  function isCapsLockOn(e) {
    var keyCode = e.keyCode ? e.keyCode : e.which;
    var shiftKey = e.shiftKey ? e.shiftKey : ((keyCode == 16) ? true : false);
    return (((keyCode >= 65 && keyCode <= 90) && !shiftKey) || ((keyCode >= 97 && keyCode <= 122) && shiftKey))
  }

  $(document).ready(function() {
    $("form").keypress(function(e) {
      var input_warning = $("div#capsLockWarning");
      if (isCapsLockOn(e)) {
        input_warning.show();
      } else {
        input_warning.hide();
      }
    });
  });
</script>