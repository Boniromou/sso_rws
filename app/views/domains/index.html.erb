<%= breadcrumbs([ t("domain_ldap.list") ], 'fa fa-lg fa-fw fa-list') -%>
<%= table_tabs(t("general.list"), 
[ t("general.list"), domains_path, policy(:domain).index_domain_ldap? ],
[ t("general.log"), index_domain_ldap_change_logs_path, policy(:change_log).index_domain_ldap? ]) %>

<div class="tab-content padding-10">
  <div class="tab-pane fade in active" id="content">
  	<% if policy(:domain).create_domain_ldap? %>
	  	<div class="row pull-right padding-10">
	      <div class="col-md-12">
	        <%= link_to t("domain_ldap.create_new"), new_domain_path, id: "create_domain_ldap", remote: true, class: "btn btn-primary" %>
	      </div>
	    </div>
    <% end %>
    <%= render :partial => "domains/table" %>
  </div>
</div>

<%= render "shared/page_setup" %>
<%= render partial: "shared/nav_setup", locals: { tab_to_activate: "domain" } %>