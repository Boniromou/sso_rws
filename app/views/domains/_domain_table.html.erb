<%= form_tag({controller: :domains, action: :create}, method: :post, remote: true, id: "create_domain_form", "data-toggle" => "validator") do %>

<table id="domain" class="table table-striped table-bordered table-hover" style="border-collapse:collapse;">
  <thead>
    <tr>
      <th class="col-md-1"><%= t("domain.domain_name") %></th>
      <th class="col-md-1" id="updated-at"><%= t("domain.updated_at") %></th>
      <th class="col-md-1"><%= t("domain.operations") %></th>
    </tr>
    <% if policy(:domain).create? %>
      <tr align="center">
        <td>
          <%= text_field(:domain, :name) %>
          <% if @errors %>
            <div>
              <span id="invalid_error" style="color: #D56161;"><%= @errors %></span>
            </div>
          <% end %>
        </td>
        <td ></td>
        <td>
          <button id="create_domain" class="btn btn-primary" type="submit">
            <i class="fa fa-plus-square"></i>
          </button>
          <%= submit_tag "", id: "real_create_domain", class: "hidden", remote: true %>
        </td>
      </tr>
    <% end %>
  </thead>

  <tbody>
    <!-- domain list -->
    <% @domains.each do |domain| %>
      <tr align="center">
        <td><%= domain.name %></td>
        <td><%= format_time(domain.updated_at) %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>

<div class="divMessageBox animated fadeOut fast" id="pop_up_dialog" style=" display: none;">
  <div class="ui-dialog" id="pop_up_ui_dialog" style="width: 600px; top: 50%; left: 50%; margin-top: -75px; margin-left: -300px;">
    <div id="pop_up_content" style="height: 60%; vertical-align: middle; padding: 20px; padding-bottom: 0px;" align="center">
    </div>
    <div id="pop_up_confirm_btn" align="center" style="margin-top: 10px; margin-bottom: 20px;">
      <table>
        <tr>
          <td><button id="cancel" class="btn btn-default"><%= t("general.cancel") %></button></td>
          <td width='20%'></td>
          <td><button id="confirm" class="btn btn-primary"><%= t("general.confirm") %></button></td>
        </tr>
      </table>
    </div>
  </div>
</div>